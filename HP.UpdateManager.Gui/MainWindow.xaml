<Window x:Class="HPUpdateManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="HP Update Manager" Height="768" Width="1200"
        Background="#121212" Foreground="#E0E0E0"
        FontFamily="Segoe UI" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Colors -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="#121212"/>
        <SolidColorBrush x:Key="SidebarBrush" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="CardBrush" Color="#252526"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#007ACC"/>
        <SolidColorBrush x:Key="AccentHoverBrush" Color="#0098FF"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#B0B0B0"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#333333"/>

        <!-- Styles -->
        <Style x:Key="SidebarButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" BorderThickness="3,0,0,0" BorderBrush="Transparent">
                            <ContentPresenter Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2A2D2E"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="Tag" Value="Active">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                                <Setter TargetName="border" Property="Background" Value="#252526"/>
                                <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource AccentHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="OutlineButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1AFFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernCard" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBrush}"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Opacity="0.2" BlurRadius="10" ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" Background="{StaticResource SidebarBrush}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- App Brand -->
                <StackPanel Grid.Row="0" Margin="20,30,20,40">
                    <TextBlock Text="HP MANAGER" FontSize="20" FontWeight="Bold" Foreground="{StaticResource AccentBrush}"/>
                    <TextBlock Text="Enterprise Update Tool" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,2,0,0"/>
                </StackPanel>

                <!-- Navigation -->
                <StackPanel Grid.Row="1">
                    <Button Name="BtnDashboard" Content="Dashboard" Style="{StaticResource SidebarButton}"/>
                    <Button Name="BtnComputers" Content="Inventory" Style="{StaticResource SidebarButton}"/>
                    <Button Name="BtnLogs" Content="Activity Logs" Style="{StaticResource SidebarButton}"/>
                    <Separator Background="#333333" Margin="20,10"/>
                    <Button Name="BtnSettings" Content="Settings" Style="{StaticResource SidebarButton}"/>
                </StackPanel>

                <!-- Footer -->
                <StackPanel Grid.Row="2" Margin="20">
                    <TextBlock Text="v1.1.0" FontSize="10" Foreground="#555555" HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Column="1" Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Top Header -->
            <Grid Grid.Row="0" Margin="0,0,0,25">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Name="TxtTitle" Text="Dashboard" FontSize="28" FontWeight="Light" Foreground="{StaticResource TextPrimaryBrush}"/>
                    <TextBlock Name="TxtSubtitle" Text="Overview of your fleet status" FontSize="14" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Name="InventoryActions" Grid.Column="1" Orientation="Horizontal" Visibility="Collapsed">
                    <TextBox Name="TxtSearch" Width="200" Height="30" VerticalContentAlignment="Center" Padding="5,0" Background="#252526" Foreground="White" BorderThickness="0" Margin="0,0,10,0" Tag="Search..." ToolTip="Search Hostname or Model"/>
                    <Button Name="BtnImport" Content="Import" Style="{StaticResource OutlineButton}" Margin="0,0,10,0"/>
                    <Button Name="BtnRefreshAll" Content="Refresh" Style="{StaticResource OutlineButton}" Margin="0,0,10,0"/>
                    <Button Name="BtnAddComputer" Content="+ Add" Style="{StaticResource PrimaryButton}"/>
                </StackPanel>
            </Grid>

            <!-- Views Container -->
            <Grid Grid.Row="1">
                
                <!-- Dashboard View -->
                <Grid Name="ViewDashboard" Visibility="Visible">
                    <WrapPanel>
                        <!-- Total Systems Card -->
                        <Border Style="{StaticResource ModernCard}" Width="240" Height="140" Margin="0,0,20,20">
                            <Grid>
                                <TextBlock Text="TOTAL SYSTEMS" FontSize="12" FontWeight="Bold" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Top"/>
                                <TextBlock Name="TxtTotalSystems" Text="0" FontSize="48" FontWeight="Light" Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                <!-- Decorative element -->
                                <Path Data="M0,0 L20,20" Stroke="{StaticResource AccentBrush}" StrokeThickness="2" VerticalAlignment="Bottom" HorizontalAlignment="Right" Opacity="0.5"/> 
                            </Grid>
                        </Border>

                        <!-- Online Systems Card -->
                        <Border Style="{StaticResource ModernCard}" Width="240" Height="140" Margin="0,0,20,20">
                            <Grid>
                                <TextBlock Text="ONLINE" FontSize="12" FontWeight="Bold" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Top"/>
                                <TextBlock Name="TxtOnlineSystems" Text="0" FontSize="48" FontWeight="Light" Foreground="#4CAF50" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                            </Grid>
                        </Border>

                        <!-- Offline Systems Card -->
                        <Border Style="{StaticResource ModernCard}" Width="240" Height="140" Margin="0,0,20,20">
                            <Grid>
                                <TextBlock Text="OFFLINE" FontSize="12" FontWeight="Bold" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Top"/>
                                <TextBlock Name="TxtOfflineSystems" Text="0" FontSize="48" FontWeight="Light" Foreground="#E57373" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                            </Grid>
                        </Border>

                        <!-- Last Refresh Card -->
                        <Border Style="{StaticResource ModernCard}" Width="240" Height="140" Margin="0,0,20,20">
                            <Grid>
                                <TextBlock Text="LAST REFRESH" FontSize="12" FontWeight="Bold" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Top"/>
                                <TextBlock Name="TxtLastRefresh" Text="Never" FontSize="20" FontWeight="Regular" Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                            </Grid>
                        </Border>
                    </WrapPanel>
                </Grid>

                <!-- Inventory View -->
                <Grid Name="ViewInventory" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="250"/>
                    </Grid.RowDefinitions>

                    <!-- DataGrid -->
                    <Border Grid.Row="0" Style="{StaticResource ModernCard}" Padding="0">
                        <DataGrid Name="DgComputers" 
                                  Background="Transparent" 
                                  BorderThickness="0" 
                                  AutoGenerateColumns="False" 
                                  CanUserAddRows="False"
                                  HeadersVisibility="Column"
                                  GridLinesVisibility="Horizontal"
                                  HorizontalGridLinesBrush="#333333"
                                  RowBackground="Transparent"
                                  Foreground="{StaticResource TextPrimaryBrush}"
                                  RowHeight="40">
                            
                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#2A2D2E"/>
                                    <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                                    <Setter Property="Padding" Value="15,10"/>
                                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                    <Setter Property="BorderBrush" Value="#333333"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>

                            <DataGrid.CellStyle>
                                <Style TargetType="DataGridCell">
                                    <Setter Property="Padding" Value="15,0"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="DataGridCell">
                                                <Border Padding="{TemplateBinding Padding}" Background="Transparent">
                                                    <ContentPresenter VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#333333"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.CellStyle>

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Hostname" Binding="{Binding Hostname}" Width="1.5*"/>
                                <DataGridTextColumn Header="Model" Binding="{Binding Model}" Width="2*"/>
                                <DataGridTextColumn Header="Serial" Binding="{Binding SerialNumber}" Width="1.5*"/>
                                <DataGridTextColumn Header="Platform ID" Binding="{Binding PlatformID}" Width="1*"/>
                                <DataGridTemplateColumn Header="Status" Width="1.5*">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border Background="{Binding StatusColor}" CornerRadius="10" Padding="10,2" HorizontalAlignment="Left" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Status}" Foreground="White" FontSize="11" FontWeight="SemiBold"/>
                                            </Border>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="Last Updated" Binding="{Binding LastUpdated}" Width="1.5*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>

                    <!-- Splitter -->
                    <GridSplitter Grid.Row="1" Height="5" HorizontalAlignment="Stretch" Background="Transparent" ShowsPreview="True"/>

                    <!-- Details Panel -->
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Updates Panel -->
                        <Border Grid.Column="0" Style="{StaticResource ModernCard}" Margin="0,10,10,0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Grid.Row="0" Text="AVAILABLE UPDATES" FontSize="12" FontWeight="Bold" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,10"/>
                                
                                <ListBox Name="LstUpdates" Grid.Row="1" Background="Transparent" BorderThickness="0" Foreground="{StaticResource TextPrimaryBrush}" FontSize="13">
                                    <ListBox.ItemContainerStyle>
                                        <Style TargetType="ListBoxItem">
                                            <Setter Property="Padding" Value="5"/>
                                            <Setter Property="Margin" Value="0,2"/>
                                        </Style>
                                    </ListBox.ItemContainerStyle>
                                </ListBox>

                                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                                    <Button Name="BtnUpdateBios" Content="Install BIOS" Style="{StaticResource PrimaryButton}" Background="#D32F2F" Margin="0,0,10,0"/>
                                    <Button Name="BtnUpdateSoftpaqs" Content="Install SoftPaqs" Style="{StaticResource PrimaryButton}"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Info Panel -->
                        <Border Grid.Column="1" Style="{StaticResource ModernCard}" Margin="10,10,0,0" Background="#1E1E1E">
                            <StackPanel>
                                <TextBlock Text="INFORMATION" FontSize="12" FontWeight="Bold" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,15"/>
                                <TextBlock Text="Select a system from the list above to view available updates." TextWrapping="Wrap" Foreground="#B0B0B0" Margin="0,0,0,10"/>
                                <TextBlock Text="• Green: Online &amp; Accessible" Foreground="#4CAF50" Margin="0,0,0,5"/>
                                <TextBlock Text="• Red: Offline / WinRM Failed" Foreground="#E57373" Margin="0,0,0,5"/>
                                <TextBlock Text="• SoftPaqs deploy via Background Job" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,10,0,5" FontStyle="Italic"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Grid>

                <!-- Settings View -->
                <Grid Name="ViewSettings" Visibility="Collapsed">
                    <StackPanel MaxWidth="600" HorizontalAlignment="Left">
                        <Border Style="{StaticResource ModernCard}">
                            <StackPanel>
                                <TextBlock Text="Application Settings" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,20"/>
                                
                                <TextBlock Text="Connection Timeout (Seconds)" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,10,0,5"/>
                                <TextBox Name="TxtTimeout" Text="10" Background="#1E1E1E" Foreground="White" BorderThickness="0" Padding="10" Margin="0,0,0,15"/>

                                <TextBlock Text="Log File Directory" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,10,0,5"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox Name="TxtLogPath" Text="./logs" Background="#1E1E1E" Foreground="White" BorderThickness="0" Padding="10"/>
                                </Grid>

                                <CheckBox Name="ChkAutoRefresh" Content="Auto-refresh Inventory every 15 minutes" Foreground="White" Margin="0,20,0,0"/>
                                
                                <Button Name="BtnSaveSettings" Content="Save Configuration" Style="{StaticResource PrimaryButton}" HorizontalAlignment="Left" Margin="0,30,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>

                <!-- Logs View -->
                <Grid Name="ViewLogs" Visibility="Collapsed">
                    <Border Style="{StaticResource ModernCard}" Padding="0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0" Background="#2A2D2E" Padding="15,10" CornerRadius="6,6,0,0">
                                <TextBlock Text="SYSTEM ACTIVITY LOG" FontSize="12" FontWeight="Bold" Foreground="{StaticResource TextSecondaryBrush}"/>
                            </Border>
                            <TextBox Name="TxtLog" Grid.Row="1" Background="#121212" Foreground="#00E676" BorderThickness="0" 
                                     IsReadOnly="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" 
                                     FontFamily="Consolas" FontSize="12" Padding="15"/>
                        </Grid>
                    </Border>
                </Grid>

            </Grid>
        </Grid>
        
        <!-- Loading Overlay -->
        <Grid Name="LoadingOverlay" Grid.ColumnSpan="2" Background="#80000000" Visibility="Collapsed">
            <Border Background="#252526" CornerRadius="8" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="30">
                <StackPanel>
                    <TextBlock Text="Processing..." FontSize="16" Foreground="White" HorizontalAlignment="Center"/>
                    <TextBlock Name="TxtLoadingStatus" Text="Please wait" FontSize="12" Foreground="#B0B0B0" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>