<Window x:Class="HPUpdateManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="HP Enterprise Update Manager" Height="800" Width="1280"
        Background="#121212" Foreground="#E0E0E0"
        FontFamily="Segoe UI" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Colors -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="#121212"/>
        <SolidColorBrush x:Key="SidebarBrush" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="CardBrush" Color="#252526"/>
        <SolidColorBrush x:Key="HeaderBrush" Color="#2D2D30"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#007ACC"/>
        <SolidColorBrush x:Key="AccentHoverBrush" Color="#0098FF"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#B0B0B0"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#4CAF50"/>
        <SolidColorBrush x:Key="ErrorBrush" Color="#E57373"/>
        <SolidColorBrush x:Key="WarningBrush" Color="#FFB74D"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#333333"/>

        <!-- Vector Icons (Path Data) -->
        <PathGeometry x:Key="IconDashboard">M3,13H11V3H3V13M3,21H11V15H3V21M13,21H21V11H13V21M13,3V9H21V3H13Z</PathGeometry>
        <PathGeometry x:Key="IconComputer">M4,6H20V16H4M20,18A2,2 0 0,0 22,16V6C22,4.89 21.1,4 20,4H4C2.89,4 2,4.89 2,6V16A2,2 0 0,0 4,18H0V20H24V18H20Z</PathGeometry>
        <PathGeometry x:Key="IconLogs">M14,10H2V12H14M14,6H2V8H14M2,16H10V14H2M21.5,11.5L23,13L16,20L11.5,15.5L13,14L16,17L21.5,11.5Z</PathGeometry>
        <PathGeometry x:Key="IconSettings">M19.14,12.94C19.17,12.64 19.17,12.33 19.17,12C19.17,11.67 19.17,11.36 19.14,11.06L21.5,9.22C21.72,9.05 21.78,8.74 21.64,8.48L19.39,4.58C19.25,4.32 18.94,4.24 18.69,4.34L15.92,5.45C15.34,5 14.73,4.64 14.07,4.37L13.65,1.42C13.61,1.15 13.38,0.94 13.1,0.94H8.6C8.32,0.94 8.09,1.15 8.05,1.42L7.63,4.36C6.97,4.64 6.36,4.99 5.78,5.45L3,4.34C2.76,4.23 2.45,4.32 2.31,4.58L0.06,8.47C-0.08,8.73 -0.02,9.04 0.2,9.22L2.56,11.06C2.53,11.36 2.53,11.67 2.53,12C2.53,12.33 2.53,12.64 2.56,12.94L0.2,14.78C-0.02,14.95 -0.08,15.26 0.06,15.52L2.31,19.42C2.45,19.68 2.76,19.77 3,19.66L5.78,18.55C6.36,19 6.97,19.36 7.63,19.63L8.05,22.58C8.09,22.85 8.32,23.06 8.6,23.06H13.1C13.38,23.06 13.61,22.85 13.65,22.58L14.07,19.63C14.73,19.36 15.34,19 15.92,18.55L18.69,19.66C18.94,19.77 19.25,19.68 19.39,19.42L21.64,15.52C21.78,15.26 21.72,14.95 21.5,14.78L19.14,12.94M10.85,12C10.85,13.74 9.44,15.15 7.7,15.15C5.96,15.15 4.55,13.74 4.55,12C4.55,10.26 5.96,8.85 7.7,8.85C9.44,8.85 10.85,10.26 10.85,12Z</PathGeometry>
        <PathGeometry x:Key="IconRefresh">M17.65,6.35C16.2,4.9 14.21,4 12,4A8,8 0 0,0 4,12A8,8 0 0,0 12,20C15.73,20 18.84,17.45 19.73,14H17.65C16.83,16.33 14.61,18 12,18A6,6 0 0,1 6,12A6,6 0 0,1 12,6C13.66,6 15.14,6.69 16.22,7.78L13,11H20V4L17.65,6.35Z</PathGeometry>
        <PathGeometry x:Key="IconPlus">M19,13H13V19H11V13H5V11H11V5H13V11H19V13Z</PathGeometry>
        <PathGeometry x:Key="IconSearch">M9.5,3A6.5,6.5 0 0,1 16,9.5C16,11.11 15.41,12.59 14.44,13.73L14.71,14H15.5L20.5,19L19,20.5L14,15.5V14.71L13.73,14.44C12.59,15.41 11.11,16 9.5,16A6.5,6.5 0 0,1 3,9.5A6.5,6.5 0 0,1 9.5,3M9.5,5C7,5 5,7 5,9.5C5,12 7,14 9.5,14C12,14 14,12 14,9.5C14,7 12,5 9.5,5Z</PathGeometry>

        <!-- Styles -->
        <Style x:Key="SidebarButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" BorderThickness="3,0,0,0" BorderBrush="Transparent" CornerRadius="0,4,4,0" Margin="0,0,10,0">
                            <StackPanel Orientation="Horizontal" Margin="{TemplateBinding Padding}">
                                <Path x:Name="icon" Data="{Binding Tag, RelativeSource={RelativeSource AncestorType=Button}}" Fill="{TemplateBinding Foreground}" Width="16" Height="16" Stretch="Uniform" Margin="0,0,15,0"/>
                                <ContentPresenter VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2A2D2E"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter TargetName="icon" Property="Fill" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False"> <!-- Used for 'Active' state logic in script -->
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                                <Setter TargetName="border" Property="Background" Value="#252526"/>
                                <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
                                <Setter TargetName="icon" Property="Fill" Value="{StaticResource AccentBrush}"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="4">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}">
                                <Path Data="{Binding Tag, RelativeSource={RelativeSource AncestorType=Button}}" Fill="White" Width="14" Height="14" Stretch="Uniform" Margin="0,0,8,0" Visibility="{Binding Tag, RelativeSource={RelativeSource AncestorType=Button}, Converter={x:Static BooleanToVisibilityConverter.Instance}}"/>
                                <ContentPresenter/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource AccentHoverBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernCard" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBrush}"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Opacity="0.3" BlurRadius="15" ShadowDepth="3"/>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" Background="{StaticResource SidebarBrush}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- App Brand -->
                <StackPanel Grid.Row="0" Margin="25,35,20,40">
                    <TextBlock Text="HP MANAGER" FontSize="22" FontWeight="Bold" Foreground="{StaticResource AccentBrush}"/>
                    <TextBlock Text="ENTERPRISE EDITION" FontSize="10" FontWeight="SemiBold" Foreground="{StaticResource TextSecondaryBrush}" Margin="2,2,0,0"/>
                </StackPanel>

                <!-- Navigation -->
                <StackPanel Grid.Row="1">
                    <Button Name="BtnDashboard" Content="Dashboard" Style="{StaticResource SidebarButton}" Tag="{StaticResource IconDashboard}"/>
                    <Button Name="BtnComputers" Content="Inventory" Style="{StaticResource SidebarButton}" Tag="{StaticResource IconComputer}"/>
                    <Button Name="BtnLogs" Content="Activity Logs" Style="{StaticResource SidebarButton}" Tag="{StaticResource IconLogs}"/>
                    <Separator Background="#333333" Margin="20,15"/>
                    <Button Name="BtnSettings" Content="Settings" Style="{StaticResource SidebarButton}" Tag="{StaticResource IconSettings}"/>
                </StackPanel>

                <!-- Footer -->
                <StackPanel Grid.Row="2" Margin="20">
                    <TextBlock Text="v1.2.0" FontSize="10" Foreground="#555555" HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Column="1" Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Top Header -->
            <Grid Grid.Row="0" Margin="0,0,0,25">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Name="TxtTitle" Text="Dashboard" FontSize="32" FontWeight="Light" Foreground="{StaticResource TextPrimaryBrush}"/>
                    <TextBlock Name="TxtSubtitle" Text="Overview of your fleet status" FontSize="14" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Name="InventoryActions" Grid.Column="1" Orientation="Horizontal" Visibility="Collapsed">
                    <Border Background="#252526" CornerRadius="4" Margin="0,0,15,0" Padding="10,0" Height="36">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="{StaticResource IconSearch}" Fill="{StaticResource TextSecondaryBrush}" Width="14" Height="14" Stretch="Uniform" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBox Name="TxtSearch" Width="200" VerticalContentAlignment="Center" Background="Transparent" Foreground="White" BorderThickness="0" Tag="Search..." ToolTip="Search Hostname, Model, or Status"/>
                        </StackPanel>
                    </Border>
                    <Button Name="BtnExport" Content="Export CSV" Style="{StaticResource PrimaryButton}" Background="#3E3E42" Margin="0,0,10,0"/>
                    <Button Name="BtnRefreshAll" Content="Refresh" Style="{StaticResource PrimaryButton}" Background="#3E3E42" Margin="0,0,10,0" Tag="{StaticResource IconRefresh}"/>
                    <Button Name="BtnImport" Content="Import" Style="{StaticResource PrimaryButton}" Background="#3E3E42" Margin="0,0,10,0"/>
                    <Button Name="BtnAddComputer" Content="Add Computer" Style="{StaticResource PrimaryButton}" Tag="{StaticResource IconPlus}"/>
                </StackPanel>
            </Grid>

            <!-- Views Container -->
            <Grid Grid.Row="1">
                
                <!-- Dashboard View -->
                <Grid Name="ViewDashboard" Visibility="Visible">
                    <WrapPanel>
                        <!-- Total Systems Card -->
                        <Border Style="{StaticResource ModernCard}" Width="280" Height="160" Margin="0,0,25,25">
                            <Grid>
                                <TextBlock Text="TOTAL SYSTEMS" FontSize="12" FontWeight="Bold" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Top"/>
                                <TextBlock Name="TxtTotalSystems" Text="0" FontSize="56" FontWeight="Light" Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                <Path Data="{StaticResource IconComputer}" Fill="{StaticResource AccentBrush}" Width="40" Height="40" Stretch="Uniform" VerticalAlignment="Bottom" HorizontalAlignment="Right" Opacity="0.2"/> 
                            </Grid>
                        </Border>

                        <!-- Online Systems Card -->
                        <Border Style="{StaticResource ModernCard}" Width="280" Height="160" Margin="0,0,25,25">
                            <Grid>
                                <TextBlock Text="ONLINE" FontSize="12" FontWeight="Bold" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Top"/>
                                <TextBlock Name="TxtOnlineSystems" Text="0" FontSize="56" FontWeight="Light" Foreground="{StaticResource SuccessBrush}" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                <Border Background="{StaticResource SuccessBrush}" Width="8" Height="8" CornerRadius="4" VerticalAlignment="Top" HorizontalAlignment="Right"/>
                            </Grid>
                        </Border>

                        <!-- Offline Systems Card -->
                        <Border Style="{StaticResource ModernCard}" Width="280" Height="160" Margin="0,0,25,25">
                            <Grid>
                                <TextBlock Text="OFFLINE / ERROR" FontSize="12" FontWeight="Bold" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Top"/>
                                <TextBlock Name="TxtOfflineSystems" Text="0" FontSize="56" FontWeight="Light" Foreground="{StaticResource ErrorBrush}" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                <Border Background="{StaticResource ErrorBrush}" Width="8" Height="8" CornerRadius="4" VerticalAlignment="Top" HorizontalAlignment="Right"/>
                            </Grid>
                        </Border>

                        <!-- Last Refresh Card -->
                        <Border Style="{StaticResource ModernCard}" Width="280" Height="160" Margin="0,0,25,25">
                            <Grid>
                                <TextBlock Text="LAST REFRESH" FontSize="12" FontWeight="Bold" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Top"/>
                                <TextBlock Name="TxtLastRefresh" Text="Never" FontSize="24" FontWeight="Regular" Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                            </Grid>
                        </Border>
                    </WrapPanel>
                </Grid>

                <!-- Inventory View -->
                <Grid Name="ViewInventory" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="250"/>
                    </Grid.RowDefinitions>

                    <!-- DataGrid -->
                    <Border Grid.Row="0" Style="{StaticResource ModernCard}" Padding="0">
                        <DataGrid Name="DgComputers" 
                                  Background="Transparent" 
                                  BorderThickness="0" 
                                  AutoGenerateColumns="False" 
                                  CanUserAddRows="False"
                                  HeadersVisibility="Column"
                                  GridLinesVisibility="Horizontal"
                                  HorizontalGridLinesBrush="#333333"
                                  RowBackground="Transparent"
                                  Foreground="{StaticResource TextPrimaryBrush}"
                                  RowHeight="45"
                                  SelectionMode="Single">
                            
                            <DataGrid.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Name="CtxPing" Header="Ping System" />
                                    <MenuItem Name="CtxOpenC" Header="Open C$ Share" />
                                    <MenuItem Name="CtxRestart" Header="Restart System" />
                                    <Separator />
                                    <MenuItem Name="CtxRemove" Header="Remove from Inventory" Foreground="#E57373"/>
                                </ContextMenu>
                            </DataGrid.ContextMenu>

                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#2A2D2E"/>
                                    <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                                    <Setter Property="Padding" Value="15,12"/>
                                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                    <Setter Property="BorderBrush" Value="#333333"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>

                            <DataGrid.CellStyle>
                                <Style TargetType="DataGridCell">
                                    <Setter Property="Padding" Value="15,0"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="DataGridCell">
                                                <Border Padding="{TemplateBinding Padding}" Background="Transparent">
                                                    <ContentPresenter VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#333333"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.CellStyle>

                            <DataGrid.Columns>
                                <DataGridTemplateColumn Header="Status" Width="140" SortMemberPath="Status">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border Background="{Binding StatusColor}" CornerRadius="12" Padding="10,4" HorizontalAlignment="Left" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Status}" Foreground="White" FontSize="11" FontWeight="Bold"/>
                                            </Border>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="Hostname" Binding="{Binding Hostname}" Width="1.5*" FontWeight="SemiBold"/>
                                <DataGridTextColumn Header="Model" Binding="{Binding Model}" Width="2*"/>
                                <DataGridTextColumn Header="OS Version" Binding="{Binding OS}" Width="1.5*"/>
                                <DataGridTextColumn Header="Disk (Free)" Binding="{Binding FreeDisk}" Width="1*"/>
                                <DataGridTextColumn Header="Memory" Binding="{Binding Memory}" Width="1*"/>
                                <DataGridTextColumn Header="Last Updated" Binding="{Binding LastUpdated}" Width="1.5*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>

                    <!-- Splitter -->
                    <GridSplitter Grid.Row="1" Height="5" HorizontalAlignment="Stretch" Background="Transparent" ShowsPreview="True"/>

                    <!-- Details Panel -->
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Updates Panel -->
                        <Border Grid.Column="0" Style="{StaticResource ModernCard}" Margin="0,10,10,0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Grid.Row="0" Text="AVAILABLE UPDATES" FontSize="12" FontWeight="Bold" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,10"/>
                                
                                <ListBox Name="LstUpdates" Grid.Row="1" Background="Transparent" BorderThickness="0" Foreground="{StaticResource TextPrimaryBrush}" FontSize="13">
                                    <ListBox.ItemContainerStyle>
                                        <Style TargetType="ListBoxItem">
                                            <Setter Property="Padding" Value="8"/>
                                            <Setter Property="Margin" Value="0,2"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ListBoxItem">
                                                        <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter Property="Background" Value="#333333"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ListBox.ItemContainerStyle>
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <CheckBox Content="{Binding Name}" IsChecked="{Binding IsSelected}" Foreground="White"/>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>

                                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                                    <Button Name="BtnUpdateSelected" Content="Install Selected" Style="{StaticResource PrimaryButton}" Background="#007ACC"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Info Panel -->
                        <Border Grid.Column="1" Style="{StaticResource ModernCard}" Margin="10,10,0,0" Background="#1E1E1E">
                            <StackPanel>
                                <TextBlock Text="SELECTED SYSTEM" FontSize="12" FontWeight="Bold" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,15"/>
                                <TextBlock Name="TxtDetailHost" Text="None Selected" FontSize="18" Foreground="White" Margin="0,0,0,5"/>
                                <TextBlock Name="TxtDetailSerial" Text="SN: -" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,20"/>
                                
                                <Separator Background="#333333" Margin="0,0,0,15"/>
                                
                                <TextBlock Text="Right-click the computer list for more actions:" TextWrapping="Wrap" Foreground="#B0B0B0" Margin="0,0,0,10" FontSize="12"/>
                                <TextBlock Text="• Ping System" Foreground="#007ACC" Margin="0,0,0,5"/>
                                <TextBlock Text="• Access C$ Share" Foreground="#007ACC" Margin="0,0,0,5"/>
                                <TextBlock Text="• Remote Restart" Foreground="#007ACC" Margin="0,0,0,5"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Grid>

                <!-- Settings View -->
                <Grid Name="ViewSettings" Visibility="Collapsed">
                    <StackPanel MaxWidth="600" HorizontalAlignment="Left">
                        <Border Style="{StaticResource ModernCard}">
                            <StackPanel>
                                <TextBlock Text="Application Settings" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,20"/>
                                
                                <TextBlock Text="Connection Timeout (Seconds)" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,10,0,5"/>
                                <TextBox Name="TxtTimeout" Text="10" Background="#1E1E1E" Foreground="White" BorderThickness="0" Padding="10" Margin="0,0,0,15"/>

                                <TextBlock Text="Log File Directory" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,10,0,5"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox Name="TxtLogPath" Text="./logs" Background="#1E1E1E" Foreground="White" BorderThickness="0" Padding="10"/>
                                </Grid>

                                <TextBlock Text="Local Repository Path" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,10,0,5"/>
                                <TextBox Name="TxtRepoPath" Text="Repository" Background="#1E1E1E" Foreground="White" BorderThickness="0" Padding="10" Margin="0,0,0,15"/>

                                <CheckBox Name="ChkAutoRefresh" Content="Auto-refresh Inventory every 15 minutes" Foreground="White" Margin="0,20,0,0"/>
                                
                                <Button Name="BtnSaveSettings" Content="Save Configuration" Style="{StaticResource PrimaryButton}" HorizontalAlignment="Left" Margin="0,30,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>

                <!-- Logs View -->
                <Grid Name="ViewLogs" Visibility="Collapsed">
                    <Border Style="{StaticResource ModernCard}" Padding="0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0" Background="#2A2D2E" Padding="15,10" CornerRadius="6,6,0,0">
                                <TextBlock Text="SYSTEM ACTIVITY LOG" FontSize="12" FontWeight="Bold" Foreground="{StaticResource TextSecondaryBrush}"/>
                            </Border>
                            <TextBox Name="TxtLog" Grid.Row="1" Background="#121212" Foreground="#00E676" BorderThickness="0" 
                                     IsReadOnly="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" 
                                     FontFamily="Consolas" FontSize="12" Padding="15"/>
                        </Grid>
                    </Border>
                </Grid>

            </Grid>
        </Grid>
        
        <!-- Loading Overlay -->
        <Grid Name="LoadingOverlay" Grid.ColumnSpan="2" Background="#80000000" Visibility="Collapsed">
            <Border Background="#252526" CornerRadius="8" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="40" Effect="{StaticResource {x:Static DropShadowEffect.Default}}">
                <StackPanel>
                    <ProgressBar Name="PbLoading" Width="200" Height="4" IsIndeterminate="True" Foreground="{StaticResource AccentBrush}" Background="#333333" BorderThickness="0" Margin="0,0,0,20"/>
                    <TextBlock Text="PROCESSING" FontSize="14" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                    <TextBlock Name="TxtLoadingStatus" Text="Please wait..." FontSize="12" Foreground="#B0B0B0" HorizontalAlignment="Center" Margin="0,8,0,0"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>